<h2>Mis Datos Personales</h2>
<a href="/" class="btn btn-success">Volver a Home productos</a>
<a href="/logout" class="btn btn-success">Salir</a>
<form action="actdatos?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label>Nombre de usuario</label>
    <input type="text" class="form-control" name="username"  aria-describedby="emailHelp" value={{datos.username}}>
  </div>
  <div class="form-group">
    <label>Nombre y apellido</label>
    <input type="text" class="form-control" name="nombre" aria-describedby="emailHelp" value={{datos.nombre}}>
  </div>
   <div class="mb-3">
    <label for="imagen">Ingresar foto de perfil</label>
    <input type="file" accept="image/x-png,image/gif,image/jpeg" class="form-control-file" name="foto" >
  </div>
   <div class="form-group">
    <label>Mail</label>
    <input type="text" class="form-control" name="mail"  aria-describedby="emailHelp" value={{datos.mail}}>
  </div>
   <div class="form-group">
    <label>Edad</label>
    <input type="text" class="form-control" name="edad"  aria-describedby="emailHelp" value={{datos.edad}}>
  </div>
    <div class="form-group">
    <label>Direccion</label>
    <input type="text" class="form-control" name="direccion"  aria-describedby="emailHelp" value={{datos.direccion}}>
  </div>
    </div>
    <div class="form-group">
    <label>Codigo de area</label>
    <input type="text" class="form-control" name="pre_tel"  aria-describedby="emailHelp" value={{datos.pre_tel}}>
  </div>
     <div class="form-group">
    <label>Telefono</label>
    <input type="text" class="form-control" name="tel"  aria-describedby="emailHelp" value={{datos.tel}}>
  </div>
  <input type="hidden"  class="form-control" name="fotodos" value={{datos.foto}}>
  <input type="hidden" name="_id" value={{datos._id}}>
    <input type="hidden" name="_method" value="PUT">
  <button type="submit" class="btn btn-primary">Actualizar</button>
</form>

